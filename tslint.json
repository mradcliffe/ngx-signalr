{
  "extends": ["tslint-config-airbnb-base"],
  "rulesDirectory": [
    "codelyzer"
  ],
  "rules": {
    "directive-selector": [true, "attribute", "ngx", "kebab-case"],
    "component-selector": [true, "element", "ngx", "kebab-case"],
    "variable-name": {
      "options": ["check-format",  "allow-leading-underscore"]
    },
    "no-console": false,
    "no-empty": false,
    "ter-max-len": {
      "options": {
        "code": 120,
        "tabWidth": 2,
        "ignoreTemplateLiterals": true,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignorePattern": "^\\s{2}(export|it|function|public|private|[a-zA-Z0-9-_]+\\().+{$"
      }
    }
  }
}
